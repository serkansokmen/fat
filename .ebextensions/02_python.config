container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python server/manage.py migrate --noinput"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "fat.settings.prod"
    "PYTHONPATH": "/opt/python/current/app/fat/server:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: server/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "server/staticfiles"
